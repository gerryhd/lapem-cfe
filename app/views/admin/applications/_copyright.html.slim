- copyright = application.applicable
div.panel
  div.application_header
    p Datos generales del solicitante
  div.application_details
    - applicant = application.data_general.person
    - applicant_address = application.data_general.address_data
    div.group_fields
      div.field_block
        label CURP:
        p
          = applicant.curp
      div.field_block
        label RFC:
        p
          = applicant.rfc
    div.group_fields
      div.field_block
        label Nombre:
        p
          = applicant.name
      div.field_block
        label Primer apellido:
        p
          = applicant.first_last_name
      div.field_block
        label Segundo apellido:
        p
          = applicant.second_last_name
    div.group_fields
      div.field_block
        label Sexo:
        p
          = applicant.gender
      div.field_block
        label Fecha de nacimiento:
        p
          = applicant.birth_date
      div.field_block
        label Lugar de nacimiento:
        p
          = applicant.birth_location
    div.group_fields
      div.field_block
        label Nacionalidad:
        p
          = applicant.nationality
      div.field_block
        label Porcentaje y tipo de participación:
        p
          = "#{applicant.participation_percent}% #{applicant.participation_type}"
    div.group_fields
      div.field_block
        label Teléfono:
        p
          = applicant.phone
      div.field_block
        label Celular:
        p
          = applicant.cell_phone
      div.field_block
        label Correo electrónico:
        p
          = applicant.email
    h1 Domicilio particular
    div.group_fields
      div.field_block
        label Código postal:
        p
          = applicant_address.zip_code
      div.field_block
        label Calle:
        p
          = applicant_address.street
      div.field_block
        label Número exterior:
        p
          = applicant_address.external_number
      div.field_block
        label Número interior:
        p
          = applicant_address.internal_number
    div.group_fields
      div.field_block
        label Colonia:
        p
          = applicant_address.colony
      div.field_block
        label Municipio:
        p
          = applicant_address.municipality
      div.field_block
        label Estado:
        p
          = applicant_address.state
      div.field_block
        label País:
        p
          = applicant_address.country.name


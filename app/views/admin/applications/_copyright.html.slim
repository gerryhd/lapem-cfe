div.panel
  div.application_header
    p Datos de la obra
  div.application_details
    - copyrighted = application.applicable
    h1 Título
    div.field_block
      p
        = copyrighted.title
    h1 Síntesis
    div.field_block
      p
        = copyrighted.summary
    div.group_fields
      div.field_block
        label Rama:
        p
          = copyrighted.copyright_branch.name
      div.field_block
        label Fecha de publicación:
        - if copyrighted.known_public
          p
            = copyrighted.publication_date
        - else
          p La obra no se ha dado a conocer
      div.field_block
    - if copyrighted.is_derivated
      div.group_fields
        div.field_block
          label Tipo de derivación:
          p
            = copyrighted.derivation_type.name
      - copyrighted.data_copyrights.each do |work|
        div.group_fields
          div.field_block
            label Título de la obra:
            p
              = work.title
          div.field_block
            label Autor de la obra:
            p
              = work.author